<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext_uri"
        />

    <Button
        android:id="@+id/button_open_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_uri"
        android:background="#CCCCCC"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:onClick="openWebsite"
        app:backgroundTint="#CCCCCC"
        />

    <EditText
        android:id="@+id/edittext_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext_location"
        />

    <Button
        android:id="@+id/button_open_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_location"
        android:background="#CCCCCC"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:onClick="openLocation"
        app:backgroundTint="#CCCCCC"
        />

    <EditText
        android:id="@+id/edittext_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext_share"
        />

    <Button
        android:id="@+id/button_share_this_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_share"
        android:background="#CCCCCC"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:onClick="shareText"
        app:backgroundTint="#CCCCCC"
        />

    <Button
        android:id="@+id/button_take_a_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:text="@string/button_picture"
        android:textColor="#000000"
        android:textStyle="bold"
        android:onClick="openCamera"
        android:layout_marginBottom="10dp"
        app:backgroundTint="#CCCCCC" />

    <ImageView
        android:id="@+id/displayImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>